// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Drink {
  id               Int            @id @default(autoincrement())
  name             String
  tags             Tag[]
  category         Category?      @relation(fields: [categoryId], references: [id])
  categoryId       Int
  iba              IBA            @relation(fields: [iBAId], references: [id])
  iBAId            Int
  alcoholic        Boolean
  glass            Glass          @relation(fields: [glassId], references: [id])
  glassId          Int
  instructions     Instructions[]
  drinkThumb       String?
  ingredients      Ingredient[]
  measures         String[]
  imageAttribution String?
  imageSource      String?
}

model Category {
  id    Int     @id @default(autoincrement())
  name  String
  Drink Drink[]
}

model IBA {
  id    Int     @id @default(autoincrement())
  name  String
  Drink Drink[]
}

model Glass {
  id    Int     @id @default(autoincrement())
  name  String
  Drink Drink[]
}

model Ingredient {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  type        String
  alcohol     Boolean
  ABV         Int
  drinks      Drink[]
}

model Tag {
  id     Int     @id @default(autoincrement())
  name   String
  drinks Drink[]
}

enum Lang {
  EN
  ES
  DE
  FR
  IT
}

model Instructions {
  id      Int    @id
  lang    Lang
  text    String
  Drink   Drink? @relation(fields: [drinkId], references: [id])
  drinkId Int?
}
